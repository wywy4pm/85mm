<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <View
        android:id="@+id/top_divide"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/catlog"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_divide"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="18dp">

        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="From:  "
            android:textColor="@color/msg_head_common"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/text_user_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/from"
            android:textColor="@color/more_yellow"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btn_reply"
            android:layout_width="57dp"
            android:layout_height="21dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/text_user_from"
            android:background="@drawable/shape_btn_reply"
            android:gravity="center"
            android:text="回复Ta"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/msg_head_common"
            android:textSize="15sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_top"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:lineSpacingExtra="2dp"
        android:textColor="@color/article_list_brief"
        android:textIsSelectable="true"
        android:textSize="15sp" />
</RelativeLayout>