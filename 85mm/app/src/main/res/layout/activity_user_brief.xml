<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_user_brief"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_title_right_bar"
        layout="@layout/layout_title_right_bar" />

    <LinearLayout
        android:id="@+id/layout_update_brief"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_title_right_bar"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_gray_radius"
        android:minHeight="182dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="top"
            android:maxLength="140"
            android:minHeight="182dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="15dp"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:id="@+id/edit_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="9dp"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/text_right_tips"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>
