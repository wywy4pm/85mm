<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/comment_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/comment_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/comment_head"
            android:text="老猫老猫:"
            android:textColor="@color/comment_author"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="12dp"
            android:lineSpacingExtra="4dp"
            android:text=""
            android:textColor="@color/charcoalgrey"
            android:textSize="14sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/comment_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_head"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="4dp"
        android:text="老猫老猫"
        android:textColor="@color/charcoalgrey"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/comment_detail"
        android:layout_marginLeft="40dp"
        android:background="@color/line_divide" />
</RelativeLayout>