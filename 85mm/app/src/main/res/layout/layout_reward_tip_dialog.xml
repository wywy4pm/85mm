<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/shape_white_corner"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/close"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@mipmap/close" />

    <TextView
        android:id="@+id/text_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="68dp"
        android:textColor="@color/charcoalgrey"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/openWechat"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/text_tips"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="29dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/shape_jump_to_wechat"
        android:gravity="center"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="复制微信号并打开微信"
        android:textColor="@color/open_wechat"
        android:textSize="14sp" />
</RelativeLayout>