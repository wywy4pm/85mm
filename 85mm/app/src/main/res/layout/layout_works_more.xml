<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50.5dp">

    <View
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/plain" />

    <TextView
        android:id="@+id/query_more_works"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/line_top"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="查看4月16日剩余90套作品"
        android:textColor="@color/charcoalgrey"
        android:textSize="13sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/line_top"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/query_more_works"
        android:src="@mipmap/ic_look_more" />

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/query_more_works"
        android:background="@color/plain" />-->
</RelativeLayout>